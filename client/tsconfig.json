{
	"compilerOptions": {
		"baseUrl": "src",
		// "module": "esnext",
		// "target": "esnext",
		"target": "esnext",
    "module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"jsx": "react",
		"esModuleInterop": true,
		"rootDir": "src",
		"allowJs": true,
		"noEmit": true,
		"moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
		"strict": true,
	},
	"include": ["src"],
	"exclude": ["node_modules", "build", "scripts"]
}